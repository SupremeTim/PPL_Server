          br
          br
          // 받아와야 할 것
          br
          br
          ul.platform-info.fade-cont-1
            li
              // 받아와야 할 것
              strong.info-title &#xC774;&#xB984;
              p.info-desc(name='my_name')=name
            li
              // 받아와야 할 것
              strong.info-title &#xB098;&#xC774;
              p.info-desc(name='my_age')=age
            li
              // 받아와야 할 것
              strong.info-title &#xC774;&#xBA54;&#xC77C;
              p.info-desc(name='my_email')=email
            li
              // 받아와야 할 것
              strong.info-title &#xC804;&#xD654;&#xBC88;&#xD638;
              p.info-desc(name='my_phone')=phone
            li
              // 받아와야 할 것
              strong.info-title &#xCD9C;&#xC2E0;&#xD559;&#xAD50;
              p.info-desc(name='my_school')=school
            li
              // 받아와야 할 것
              //- strong.info-title &#xACBD;&#xB825;
              //- p.info-desc(name='my_carrier')
      section.section.app
        .grid
          p.platform-text.fade-cont-1(name='my_info')=info
          br
          br
          br
          br
          br
          br
          p(style='font-size: 30px; color:#80F5FF;  font-weight:bold;')
            | Languages
          br
          br
          .container-right(name='language_bar')
            p.fade-cont-7
              b
                a(name='language_name')=lang
            br
          // 받아와야 할 것
      section.section.engine
        .bg-engine
        .grid
          p(style='font-size: 30px; color:#ffffff;  font-weight:bold;')
            | Projects
          // 받아와야 할 것
          ul.engine-info
            li(name='project-many')
              .fade-cont-3
                strong.info-title(name='project_name')=project_name
                a#project_address_id.info-desc(name='project_address_name', href=project_link)=project_link
                p.info-desc(name='project_explanation')=project_content
