      section.section.visual
        .grid
          .deco-visual
          .container
            p(name='portfolio_name', style='font-size: 50px; color:#eeeeee;  font-weight:bold;')=port_name
      section.section.platform
        .grid
          p(style='font-size: 30px; color:#0c0c0c;  font-weight:bold;')
