    .top
      // ppl logo
      a(href='/')
        img#ppl_home(src='/icon/ppl_logo.png', alt='ppl')
      // 로그인
      if user && user.id  
        .login_complete
          img(src='/icon/mainpage_profileicon.png', alt='profileicon')
          .user_name= user.name +'님'
          a(href='') 설정
          a(href='/auth/logout') 로그아웃
          //- 디자인 요청!!!
