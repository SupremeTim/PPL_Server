html(lang='en')
  head
    meta(charset='UTF-8')
    link(href='/css/mainstyle.css?', type='text/css', rel='stylesheet')
    link(href='/css/portfolio_createstyle.css', type='text/css', rel='stylesheet')
    script.
      function getportfolioName() {
      var portfolio_name = window.prompt("포트폴리오의 이름을 입력해주세요")
      if(portfolio_name != null){
        document.portfolio.action='/portfolio/submit';
        document.getElementById('port-name').value=portfolio_name;
        document.portfolio.submit();
      }
      }
    title create portfolio
