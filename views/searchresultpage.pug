html
  body(lang='en')
    head
      meta(charset='UTF-8')
      link(href='../css/mainstyle.css?', type='text/css', rel='stylesheet')
      link(href='../css/searchresultstyle.css?var=1', type='text/css', rel='stylesheet')
      title Search Result
    body
      .top
        // ppl logo
        a(href='/')
          img#ppl_home(src='../icon/ppl_logo.png', alt='ppl')
          // 로그인
        if user && user.id  
          .login_complete
           img#profileicon(src='../icon/mainpage_profileicon.png', alt='profile')
           a(href='/mypage')= user.name +'님'
           |             &nbsp;&nbsp;|&nbsp;&nbsp;
           a(href='/mypage') 설정
           |             &nbsp;&nbsp;|&nbsp;&nbsp;
           a(href='/auth/logout') 로그아웃
          //- 디자인 요청!!!
        else
          .login
            a(href='/auth') 로그인 / 회원가입
      // 메뉴바
    // 메뉴바
    ul.mainmenu
      li#searchmenu.menu
        a(href='/search') SEARCH
      li#portfoliiomenu.menu
        a(href='/make') PORTFOLIO
      li#productmenu.menu
        a(href='/product') PRODUCT
    .search_top
      .search_bar=`${search} ${develop} ${spec}`
        a(href='/search')
          img.cancelbtn(src='../icon/searchpage_cancelbutton.png')
    .portfolio_box
      if results
        for result in results
          .result_portfolio
           .portfolio_info
             .pic
              img.pic-image(src='../icon/portfoliopage_portfolio2.png')
              span.pic-caption.bottom-to-top
                h3=result.port_name
                a(href=`/portfolio/complete/${result.id}`) view portfolio
           h4=`${result.user.name}, ${result.user.age}세, ${result.spe_field} 부문, ${result.dev_field} 개발자`
      else